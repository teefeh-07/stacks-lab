{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["./dist", "./node_modules", "./drizzle.config.ts", "../drizzle.config.ts"]
}
